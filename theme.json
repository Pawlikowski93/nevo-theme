  "styles": {
    "color": {
      "background": "var(--wp--preset--color--white)",
      "text": "var(--wp--preset--color--gray-900)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--body)",
      "fontSize": "var(--wp--preset--font-size--base)",
      "lineHeight": "1.6",
      "fontWeight": "400"
    },
    "spacing": {
      "blockGap": "var(--wp--preset--spacing--base)"
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        },
        "typography": {
          "textDecoration": "none"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--primary-light)"
          },
          "typography": {
            "textDecoration": "underline"
          }
        }
      },
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontSize": "var(--wp--preset--font-size--6-xl)",
          "fontWeight": "700",
          "lineHeight": "1.2"
        },
        "spacing": {
          "margin": {
            "top": "0",
            "bottom": "var(--wp--preset--spacing--lg)"
          }
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontSize": "var(--wp--preset--font-size--5-xl)",
          "fontWeight": "700",
          "lineHeight": "1.25"
        },
        "spacing": {
          "margin": {
            "top": "var(--wp--preset--spacing--xl)",
            "bottom": "var(--wp--preset--spacing--base)"
          }
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontSize": "var(--wp--preset--font-size--4-xl)",
          "fontWeight": "600",
          "lineHeight": "1.3"
        },
        "spacing": {
          "margin": {
            "top": "var(--wp--preset--spacing--lg)",
            "bottom": "var(--wp--preset--spacing--sm)"
          }
        }
      },
      "h4": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontSize": "var(--wp--preset--font-size--3-xl)",
          "fontWeight": "600",
          "lineHeight": "1.4"
        }
      },
      "h5": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontSize": "var(--wp--preset--font-size--2-xl)",
          "fontWeight": "600",
          "lineHeight": "1.5"
        }
      },
      "h6": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontSize": "var(--wp--preset--font-size--xl)",
          "fontWeight": "600",
          "lineHeight": "1.5"
        }
      },
      "button": {
        "color": {
          "background": "var(--wp--preset--color--coral)",
          "text": "var(--wp--preset--color--white)"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontSize": "var(--wp--preset--font-size--base)",
          "fontWeight": "600",
          "textTransform": "none"
        },
        "spacing": {
          "padding": {
            "top": "0.75rem",
            "right": "1.5rem",
            "bottom": "0.75rem",
            "left": "1.5rem"
          }
        },
        "border": {
          "radius": "var(--wp--custom--border-radius--lg)"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--coral-hover)"
          }
        }
      }
    },
    "blocks": {
      "core/paragraph": {
        "spacing": {
          "margin": {
            "top": "0",
            "bottom": "var(--wp--preset--spacing--sm)"
          }
        }
      },
      "core/list": {
        "spacing": {
          "margin": {
            "top": "0",
            "bottom": "var(--wp--preset--spacing--base)"
          },
          "padding": {
            "left": "var(--wp--preset--spacing--base)"
          }
        }
      },
      "core/quote": {
        "color": {
          "text": "var(--wp--preset--color--gray-700)"
        },
        "border": {
          "color": "var(--wp--preset--color--accent)",
          "style": "solid",
          "width": "0 0 0 4px"
        },
        "spacing": {
          "padding": {
            "left": "var(--wp--preset--spacing--base)"
          },
          "margin": {
            "top": "var(--wp--preset--spacing--lg)",
            "bottom": "var(--wp--preset--spacing--lg)"
          }
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xl)",
          "fontStyle": "italic"
        }
      },
      "core/separator": {
        "color": {
          "background": "var(--wp--preset--color--gray-200)"
        },
        "spacing": {
          "margin": {
            "top": "var(--wp--preset--spacing--xl)",
            "bottom": "var(--wp--preset--spacing--xl)"
          }
        }
      }
    }
  }
}